<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="?acqViewHorizontalOffset"
    android:layout_marginTop="@dimen/acq_pay_button_vertical_margin"
    android:layout_marginRight="?acqViewHorizontalOffset"
    android:background="@drawable/acq_button_fps"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/acq_fps_button_padding">

    <TextView
        android:id="@+id/acq_payment_fps_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@color/acq_colorMain"
        android:textSize="@dimen/acq_medium_text_size"
        android:textStyle="bold"
        tools:text="Оплатить через" />

    <ImageView
        android:id="@+id/acq_button_fps_logo_with_text"
        android:layout_width="@dimen/acq_fps_logo_width_80"
        android:layout_height="@dimen/acq_fps_logo_height"
        android:scaleType="centerInside"
        android:src="@drawable/acq_fps_logo_black"
        android:visibility="visible"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/acq_button_fps_logo_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/acq_fps_logo_width_36"
            android:layout_height="@dimen/acq_fps_logo_height"
            android:layout_marginLeft="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/acq_fps_logo"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/acq_payment_fps_text_fps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="@string/acq_fps"
            android:textColor="@color/acq_colorMain"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>