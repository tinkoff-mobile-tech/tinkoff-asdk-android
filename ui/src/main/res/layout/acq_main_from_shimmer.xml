<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="32dp">

    <View
        android:id="@+id/AcqKassaShimmer"
        android:layout_width="116dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/acq_shimmer_rectangle_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/AcqOrderTitle"
        android:layout_width="72dp"
        android:layout_height="14dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/acq_shimmer_rectangle_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AcqKassaShimmer" />

    <View
        android:id="@+id/AcqOrderSumm"
        android:layout_width="144dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/acq_shimmer_rectangle_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AcqOrderTitle" />

    <View
        android:id="@+id/AcqOrderPrimary"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/acq_shimmer_rectangle_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AcqOrderSumm" />

    <View
        android:id="@+id/AcqOrderOtherMethods"
        android:layout_width="275dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/acq_shimmer_rectangle_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AcqOrderPrimary" />

    <View
        android:id="@+id/AcqOrderOtherMethod1Icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/acq_shimmer_circle_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AcqOrderOtherMethods" />

    <View
        android:id="@+id/AcqOrderOtherMethod1Title"
        android:layout_width="102dp"
        android:layout_height="14dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/acq_shimmer_rectangle_bg"
        app:layout_constraintStart_toEndOf="@+id/AcqOrderOtherMethod1Icon"
        app:layout_constraintTop_toTopOf="@+id/AcqOrderOtherMethod1Icon" />

    <View
        android:id="@+id/AcqOrderOtherMethod1SubTitle"
        android:layout_width="158dp"
        android:layout_height="10dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/acq_shimmer_rectangle_bg"
        app:layout_constraintBottom_toBottomOf="@+id/AcqOrderOtherMethod1Icon"
        app:layout_constraintStart_toEndOf="@+id/AcqOrderOtherMethod1Icon" />

    <View
        android:id="@+id/AcqOrderOtherMethod2Icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/acq_shimmer_circle_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AcqOrderOtherMethod1Icon" />


    <View
        android:id="@+id/AcqOrderOtherMethod2Title"
        android:layout_width="88dp"
        android:layout_height="14dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/acq_shimmer_rectangle_bg"
        app:layout_constraintStart_toEndOf="@+id/AcqOrderOtherMethod2Icon"
        app:layout_constraintTop_toTopOf="@+id/AcqOrderOtherMethod2Icon" />

    <View
        android:id="@+id/AcqOrderOtherMethod2SubTitle"
        android:layout_width="180dp"
        android:layout_height="10dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/acq_shimmer_rectangle_bg"
        app:layout_constraintBottom_toBottomOf="@+id/AcqOrderOtherMethod2Icon"
        app:layout_constraintStart_toEndOf="@+id/AcqOrderOtherMethod2Icon" />

</androidx.constraintlayout.widget.ConstraintLayout>