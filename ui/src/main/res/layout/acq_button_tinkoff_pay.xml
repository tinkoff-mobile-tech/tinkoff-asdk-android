<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/acq_tinkoff_pay_button_height"
    android:layout_marginLeft="?acqViewHorizontalOffset"
    android:layout_marginTop="@dimen/acq_pay_button_vertical_margin"
    android:layout_marginRight="?acqViewHorizontalOffset"
    android:background="@drawable/acq_button_tinkoff_pay"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:text="@string/acq_tinkoff"
        android:textColor="@color/acq_colorTinkoffPayText"
        android:textSize="18sp"
        app:drawableEndCompat="@drawable/acq_icon_tinkoff_pay"
        tools:ignore="ContentDescription" />

</LinearLayout>